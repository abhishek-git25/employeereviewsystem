  <%- style %>
</head>

<body>

  <% if(showHeader){ %>
    <%- include('_header'); %>
      <% } %>



        <main id="layout" style="height: 100vh" ><%- body %></main>

        <% if(showFooter){ %>
          <%- include('_footer'); %>
            <% } %>

              <%- script %>

                <script src="/js/bootstrap.min.js"></script>
                <script>
                  console.log("Success Messages:", <% - JSON.stringify(successMessage) %>);
                  console.log("Error Messages:", <% - JSON.stringify(errorMessage) %>);
                          <% if (successMessage && successMessage.length > 0) { %>
                    new Noty({
                      theme: 'relax',
                      text: '<%= successMessage[0] %>', // Access the first success message if there are multiple
                      type: 'success',
                      layout: 'topRight',
                      timeout: 1500
                    }).show();
                          <% } %>

                          <% if (errorMessage && errorMessage.length > 0) { %>
                    new Noty({
                      theme: 'relax',
                      text: '<%= errorMessage[0] %>', // Access the first error message if there are multiple
                      type: 'error',
                      layout: 'topRight',
                      timeout: 1500
                    }).show();
                          <% } %>
                </script>
</body>

</html>